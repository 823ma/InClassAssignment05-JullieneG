<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_day1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="julliene.inclassassignment05_jullieneg.Day1">

    <ImageView
        android:id="@+id/louvreMuseum"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:maxHeight="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/louvremuseum" />

    <TextView
        android:id="@+id/dayThreeLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/louvreMuseum"
        android:layout_toRightOf="@+id/louvreMuseum"
        android:text="Location: Louvre Museum"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/toBring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dayThreeLocation"
        android:layout_alignStart="@+id/dayThreeLocation"
        android:layout_below="@+id/dayThreeLocation"
        android:layout_marginTop="17dp"
        android:text="@string/headerOne"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/louvreMuseum"
        android:layout_alignLeft="@+id/toBring"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/toBring"
        android:layout_below="@+id/toBring"
        android:background="#E8EAF6"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/hint"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/louvreMuseum"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/headerTwo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/places_to_go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="#E8EAF6"
            android:gravity="top"
            android:hint="@string/hint"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="shareNow"
            android:text="@string/button" />

    </LinearLayout>

</RelativeLayout>
