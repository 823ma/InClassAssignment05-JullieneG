<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    android:orientation="vertical"
    tools:context="julliene.inclassassignment05_jullieneg.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/day1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/textStyle"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/day1"
        android:onClick="openDayOne" />

    <TextView
        android:id="@+id/day2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/textStyle"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/day2"
        android:onClick="openDayTwo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/day3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/textStyle"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/day3"
        android:onClick="openDayThree" />

    <TextView
        android:id="@+id/day4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/textStyle"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/day4"
        android:onClick="openDayFour" />
        </LinearLayout>

</LinearLayout>

